<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--  -->
    </style>

    <!-- 设置activity切换动画 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

        <!-- Action bar styles -->
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.ActionBar">
       <item name="android:background">@drawable/ab_background</item>
        <item name="android:backgroundStacked">@drawable/ab_background</item>
        <!-- <item name="android:backgroundSplit">@drawable/ab_split_background</item> -->
    </style>

</resources>