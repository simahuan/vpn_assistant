<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="btn_default_normal">#30A3EE</color>
    <color name="btn_default_pressed">#F8FAFE</color>
    <color name="tab_segmented_checked">#30A3EE</color>
    <color name="tab_segmented_unchecked">#F8FAFE</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="app_name">android-izy</string>
    <string name="hello_world">Hello world!</string>
    <style name="AppActionBar" parent="@android:style/Widget.Holo.ActionBar">
       <item name="android:background">@drawable/ab_background</item>
        <item name="android:backgroundStacked">@drawable/ab_background</item>
        <!-- <item name="android:backgroundSplit">@drawable/ab_split_background</item> -->
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--  -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

        <!-- Action bar styles -->
        <item name="android:actionBarStyle">@style/AppActionBar</item>
    </style>
    <style name="EditText.Normal" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/edittext_default</item>
        <!-- <item name="android:padding">12dp</item> -->
        <item name="android:singleLine">true</item>
    </style>
    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>
    <style name="TabIndexSegmentedLeft" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <!-- <item name="android:textColor">@drawable/tab_segmented_textcolor</item> -->
        <item name="android:background">@drawable/tab_segmented_left</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TabIndexSegmentedMiddle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
       <!--  <item name="android:textColor">@drawable/tab_segmented_textcolor</item> -->
        <item name="android:background">@drawable/tab_segmented_middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TabIndexSegmentedRight" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tab_segmented_textcolor</item>
        <item name="android:background">@drawable/tab_segmented_right</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextMultiLine" parent="EditText.Normal">
        <item name="android:singleLine">false</item>
        <item name="android:lines">7</item>
        <item name="android:gravity">left|top</item>
    </style>
    <style name="ToggleButton.Normal" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textOff"/>
        <item name="android:textOn"/>
    </style>
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit</item>
    </style>
</resources>